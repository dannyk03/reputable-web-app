{
  "extends": "tsconfig/base.json",
  "include": [
    "./",
  ],
  "exclude": [
    "node_modules",
    "dist/**"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  }
}
